<UserControl x:Class="Test_Designing.MVVM.View.Settings.ThemeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Test_Designing.MVVM.View.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="340" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <RadioButton Content="Dark Theme" FontSize="20" Name="DarkThemeButton"
                         Foreground="White" Width="200"
                         Style="{StaticResource RadioButtonTheme}"/>

            <RadioButton Content="Flashbang Theme" FontSize="20" Name="FlashbangThemeButton"
                         Foreground="White" Width="200"
                         Style="{StaticResource RadioButtonTheme}"/>
        </StackPanel>
    </Grid>
</UserControl>
